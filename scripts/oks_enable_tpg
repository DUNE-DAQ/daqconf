#!/bin/env python3
import conffwk
import confmodel

import click
import os
import glob
from daqconf.enable_tpg import enable_tpg

@click.command()
@click.option('--disable', '-d', default=False, is_flag=True,
              help='disable rather than enable the specified resources')
@click.option('--system_name', '-s', type=str, default='',
              help='Name of system to manipulate if not specified the first '
              'system found in the database will be used')
@click.argument('oksfile')
def oks_enable(oksfile, disable, system_name):
  """Script to enable or disable (-d) TP generation from the System of the
  specified OKS database file"""
  enable_tpg(oksfile, disable, system_name)

if __name__ == '__main__':
  oks_enable()
